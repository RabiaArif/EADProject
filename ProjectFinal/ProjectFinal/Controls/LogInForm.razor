@page "/login"

<div class="card">
    <h4 class="card-header">Login</h4>
    <div class="card-body">
        <EditForm Model="@person" OnSubmit="FormSubmitted">
            
            <div class="form-group">
                <label>Username</label>
                <InputText @bind-Value="person.UserName" class="form-control" />
                
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText @bind-Value="person.Password" type="password" class="form-control" />
                
            </div>
            <button  class="btn btn-primary">
               
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                
                Login
            </button>
            <NavLink href="register" class="btn btn-link">Register</NavLink>
        </EditForm>
    </div>
</div>


@code {
        string status   = "Form not submitted";
    void FormSubmitted() {
            status   = "Form submitted";}     

 Person person = new Person {
        UserName = "Ali",
        Password = "123"
    };

    public class Person {
        public string UserName {get; set;}
        public string Password {get; set;}    
    }

    }

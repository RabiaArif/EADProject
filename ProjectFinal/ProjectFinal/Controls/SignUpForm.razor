@page "/register"

<div class="card">
    <h4 class="card-header">Register</h4>
    <div class="card-body">
        <EditForm Model="@person" OnValidSubmit="FormSubmitted">
            
            <div class="form-group">
                <label>First Name</label>
                <InputText @bind-Value="person.FName" class="form-control" />
               
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <InputText @bind-Value="person.LName" class="form-control" />
              
            </div>
            <div class="form-group">
                <label>Username</label>
                <InputText @bind-Value="person.UserName" class="form-control" />
                
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText @bind-Value="person.Password" type="password" class="form-control" />
                
            </div>
            <button  class="btn btn-primary">
                <span class="spinner-border spinner-border-sm mr-1"></span>
                
                Register
            </button>
            <NavLink href="login" class="btn btn-link">Cancel</NavLink>
        </EditForm>
    </div>
</div>


    
@code{
    
        string status   = "Form not submitted";
    void FormSubmitted() {
            status   = "Form submitted";}     

 Person person = new Person {
        FName = "Ahmad",
        LName = "Malik",
        UserName = "Ahmad",
        Password = "123"
    };

    public class Person {
        public string FName {get; set;}
        public string LName {get; set;}
        public string UserName {get; set;}
        public string Password {get; set;}    
    }

    }
